@using Smartstore.Admin.Models.Topics

@model TopicModel

@{
    ViewBag.Title = T("Admin.ContentManagement.Topics.EditTopicDetails") + " - " + @Model.SystemName;
}

<form id="topic-form" asp-action="Edit">
    <div class="section-header">
        <div class="title">
            <a sm-backto asp-action="List"></a>
            <i class="far fa-file"></i>
            <span>@ViewBag.Title</span>
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-warning">
                <i class="fa fa-check"></i>
                <span>@T("Admin.Common.Save")</span>
            </button>
            <button type="submit" name="save" value="save-continue" class="btn btn-secondary">
                <span>@T("Admin.Common.SaveContinue")</span>
            </button>
            <button type="submit" name="topic-delete" value="topic-delete" id="topic-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                <span>@T("Admin.Common.Delete")</span>
            </button>
            <confirm button-id="topic-delete" />
        </div>
    </div>

    <partial name="_CreateOrUpdate" />
</form>
