@using Smartstore.Admin.Models.Customers 

@model DashboardTopCustomersModel

<div class="report">
    <div class="report-title-row flex-wrap">
        <div class="report-title flex-grow-1 mr-3">@T("Admin.SalesReport.TopCustomers")</div>
        <nav>
            <div class="nav btn-group" role="tablist">
                <a class="btn btn-secondary btn-dashboard nav-item active" id="customers-quantity-tab" data-toggle="tab" href="#customers-quantity" role="tab" aria-controls="customers-quantity" aria-selected="true">@T("Admin.SalesReport.ByQuantity")</a>
                <a class="btn btn-secondary btn-dashboard nav-item" id="customers-amount-tab" data-toggle="tab" href="#customers-amount" role="tab" aria-controls="customers-amount" aria-selected="false">@T("Admin.SalesReport.ByAmount")</a>
            </div>
        </nav>
    </div>
    <div class="tab-content" id="customers-tabcontent">
        <div class="tab-pane fade show active" id="customers-quantity" role="tabpanel" aria-labelledby="customers-quantity-tab">
            <div class="table-responsive table-dashboard table-hover table-prevent-overflow">
                <table class="table table-3 small">
                    <thead>
                        <tr>
                            <th class="display-row">@T("Admin.Customers.Reports.BestBy.Fields.Customer")</th>
                            <th class="display-row text-center">@T("Account.CustomerOrders")</th>
                            <th class="display-row text-right">@T("Common.Amount")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.TopCustomersByQuantity)
                        {
                            <tr>
                                <td class="display-row" title="@customer.CustomerDisplayName">
                                    <a asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.CustomerId">@customer.CustomerDisplayName</a>
                                </td>
                                <td class="display-row text-center font-weight-medium" title="@customer.OrderCount">@customer.OrderCount</td>
                                <td class="display-row text-right" title="@customer.OrderTotal @T("Tax.InclVAT")">@customer.OrderTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="customers-amount" role="tabpanel" aria-labelledby="customers-amount-tab">
            <div class="table-responsive table-dashboard table-hover table-prevent-overflow">
                <table class="table table-3 small">
                    <thead>
                        <tr>
                            <th class="display-row">@T("Admin.Customers.Reports.BestBy.Fields.Customer")</th>
                            <th class="display-row text-center">@T("Account.CustomerOrders")</th>
                            <th class="display-row text-right">@T("Common.Amount")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.TopCustomersByAmount)
                        {
                            <tr>
                                <td class="display-row" title="@customer.CustomerDisplayName">
                                    <a asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.CustomerId">@customer.CustomerDisplayName</a>
                                </td>
                                <td class="display-row text-center" title="@customer.OrderCount">@customer.OrderCount</td>
                                <td class="display-row text-right font-weight-medium" title="@customer.OrderTotal @T("Tax.InclVAT")">@customer.OrderTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>