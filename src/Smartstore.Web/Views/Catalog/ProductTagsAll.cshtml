@using Smartstore.Web.Models.Catalog

@model PopularProductTagsModel

@{
    Assets.AppendTitleParts(T("PageTitle.AllProductTags"));
}

<div class="page product-tags-all-page">
    <div class="page-title">
        <h1 class="h2">@T("Products.Tags.All")</h1>
    </div>
    <div class="page-body">
        <div sm-if="Model.Tags.Count > 0" class="listbox block-body">
            <div class="tags fs-h4">
                <ul class="list-inline">
                    @foreach (var item in Model.Tags)
                    {
                        <li class="list-inline-item">
                            <a class="fwn link-dnu link-body" asp-route="ProductsByTag" asp-route-productTagId="@item.Id" asp-route-path="@item.Slug" style="font-size:@(Model.GetFontSize(item))%;">
                                <span sm-language-attributes-for="item.Name">@item.Name</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
