@model ChoiceModel

@{
    var controlId = Model.BuildControlId();
    var placeholder = Model.Description.RemoveHtml().TrimSafe();
}

<textarea rows="2" id="@(controlId)" name="@(controlId)-text" class="form-control suppress-pd-ajax-update" placeholder="@placeholder" attr-disabled='(Model.IsDisabled, "disabled")'>
    @Model.TextValue
</textarea>