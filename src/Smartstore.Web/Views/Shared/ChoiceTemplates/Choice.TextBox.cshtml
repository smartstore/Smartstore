@model ChoiceModel

@{
    var controlId = Model.BuildControlId();
    var placeholder = Model.Description.RemoveHtml().TrimSafe();
}

<input name="@(controlId)-text" id="@(controlId)" 
       type="text" 
       class="form-control skip-pd-ajax-update choice-textbox"
       placeholder="@placeholder" 
       value="@Model.TextValue" 
       attr-disabled='(Model.IsDisabled, "disabled")' />