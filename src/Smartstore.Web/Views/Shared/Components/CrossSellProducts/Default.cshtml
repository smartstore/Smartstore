@using Smartstore.Web.Models.Catalog;

@model ProductSummaryModel

@{
    if (!Model.Items.Any())
    {
        return;
    }
}

<div class="block block-boxed cross-sells">
    <div class="block-title">
        <h4>@T("ShoppingCart.CrossSells")</h4>
    </div>
    <div class="block-body pt-0">
        <div class="artlist-carousel">
            <partial name="Product.List" model="Model" />
        </div>
    </div>
</div>

<zone name="after_cross_sell_products" />