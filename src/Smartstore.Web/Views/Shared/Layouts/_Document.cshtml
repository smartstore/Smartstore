<!DOCTYPE html>
<html sm-language-attributes-for="WorkContext.WorkingLanguage" data-pnotify-firstpos1="0">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, viewport-fit=cover, shrink-to-fit=no" />
    <meta name="HandheldFriendly" content="true">
    <meta name="description" content="@Assets.GetMetaDescription()" />
    <meta name="keywords" content="@Assets.GetMetaKeywords()" />
    <meta name="generator" content="Smartstore @SmartstoreVersion.CurrentFullVersion" />
    <meta property="sm:root" content="@Url.Content("~/")" />
    @await Component.InvokeAsync("AntiForgeryToken")

    <title itemprop="name">@Assets.GetDocumentTitle(true)</title>

    <partial name="Head" />
    <partial name="ConditionalComments" />
    <partial name="_ClientRes" />
    <partial name="_GoogleFonts" />

    <zone name="stylesheets">
        <link rel="stylesheet" href="~/bundle/css/site-common.css" />
    </zone>

    <zone name="head_scripts">
        <script src="~/bundle/js/jquery.js"></script>
    </zone>

    @if (Display.GetThemeVariable<bool>("fa-use-pro"))
    {
        @* Preload web font files to avoid FOIT (Flash of Invisible Text) and FOUT (Flash of Unstyled Text) *@
        <link as="font" rel="preload" href="~/lib/fontastic/fonts/fontastic.woff" crossorigin />
        <link as="font" rel="preload" href="~/lib/fa6/webfonts/fa-solid-900.woff2" crossorigin />
        <link as="font" rel="preload" href="~/lib/fa6/webfonts/fa-regular-400.woff2" crossorigin />
    }

    <zone name="head_canonical"></zone>
    <zone name="head_links"></zone>
    <zone name="head"></zone>

    <script src="~/js/smartstore.globalization.adapter.js"></script>

    @await Component.InvokeAsync("Favicon")
</head>

<body class="lyt-cols-1">
    <zone name="start" />
    @RenderBody()
    <zone name="aftercontent" />@* Not available via widgetzones.json. Name colides with content_after and it's unnecassary there.*@

    <zone name="scripts">
        <script src="~/bundle/js/site.js"></script>
        <script src="~/lib/select2/js/i18n/{lang}.js" sm-locale-for="WorkContext.WorkingLanguage"></script>
        <script src="~/lib/moment/locale/{lang}.js" sm-locale-for="WorkContext.WorkingLanguage"></script>
    </zone>
    <zone name="end" />
</body>
</html>
