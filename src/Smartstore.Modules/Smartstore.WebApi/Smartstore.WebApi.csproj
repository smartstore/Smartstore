<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
		<Product>Smartstore Web API</Product>
		<OutputPath>..\..\Smartstore.Web\Modules\Smartstore.WebApi</OutputPath>
		<OutDir>$(OutputPath)</OutDir>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<RootNamespace>Smartstore.Web.Api</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.OpenApi" Version="1.6.24" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="8.1.1" />
    <PackageReference Include="Swashbuckle.AspNetCore.Newtonsoft" Version="8.1.1" />
  </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\Smartstore.Web\Smartstore.Web.csproj">
            <Private>False</Private>
            <CopyLocal>False</CopyLocal>
            <CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
        </ProjectReference>
    </ItemGroup>
</Project>